---
const { title = "Site", contain = true } = Astro.props;
---
<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>{title}</title>
    <style is:global>
      @import "../styles/app.css";
    </style>
  </head>
  <body class="bg-surface text-text antialiased">
    <!-- Sticky Header / Nav (above hero area) -->
    <header role="banner" class="sticky top-0 z-30 bg-header text-header border-0">
      <nav class="px-page">
        <div class="w-full max-w-content mx-auto flex items-center justify-between py-4">
          <a href="/" class="font-semibold">Remarka</a>
          <ul class="flex items-center gap-4">
            <li><a href="/" class="hover:underline">Home</a></li>
            <li><a href="/moodboard" class="hover:underline">Moodboard</a></li>
            <li><a href="/health" class="hover:underline">Health</a></li>
          </ul>
        </div>
      </nav>
    </header>

    <main class={contain ? "px-page" : ""}>
      <slot />
    </main>

    <footer class="mt-16 border-0">
      <div class="px-page">
        <div class="w-full max-w-content mx-auto py-8 text-sm opacity-70">
          Â© {new Date().getFullYear()} Remarka
        </div>
      </div>
    </footer>
  </body>
</html>
